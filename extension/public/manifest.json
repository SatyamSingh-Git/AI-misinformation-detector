{
  "manifest_version": 3,
  "name": "Misinformation Detector",
  "version": "1.0",
  "description": "Analyzes the content of the current page to detect potential misinformation.",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "http://127.0.0.1:8000/"
  ]
}
